<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloWorld.ImagePage">
    <StackLayout>
        <StackLayout Padding="10, 10, 0, 3">
            <Label Text="nyc_photographer"/>
        </StackLayout>
        <Image Source="http://lorempixel.com/1920/1080/nature/3/"/>
        <StackLayout HorizontalOptions="Start"
                     Padding="10, 0"
                     Spacing="30"
                     Orientation="Horizontal">
            <Button Text="Like"/>
            <Button Text="Comment"/>
            <Button Text="Share"/>
        </StackLayout>
        <StackLayout Padding="5, 15, 0, 0">
            <BoxView Color="#f0f0f0"
                     HeightRequest="1"/>
            <Label Text="700 likes"
                   FontAttributes="Bold"/>
            <Label x:Name="paragraph"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
